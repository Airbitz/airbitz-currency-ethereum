  // $FlowFixMe
  const templateSpend = {
    networkFeeOption: 'low',
    metadata: {
      name: 'Transfer to College Fund',
      category: 'Transfer:Wallet:College Fund'
    },
    spendTargets: [
      {
        currencyCode: 'BTC',
        publicAddress: '2MutAAY6tW2HEyrhSadT1aQhP4KdCAKkC74',
        nativeAmount: '210000' // 0.021 BTC
